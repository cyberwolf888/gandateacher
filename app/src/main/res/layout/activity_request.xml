<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latar"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RequestActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:id="@+id/cardView"
        android:background="@color/colorNormalWhite"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/logo"
            android:id="@+id/imageStudent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/studentName"
            android:text="I Nyoman Swantara"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="top|center"
            />
        <TextView
            android:layout_width="255dp"
            android:layout_height="32dp"
            android:id="@+id/studentLecture"
            android:text="Bhs.Inggris"
            android:layout_gravity="top|center"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="35dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/arrowDetail"
            android:src="@drawable/arrow_detail"
            android:background="@color/colorPrimary"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            />
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTryRequest"
        android:layout_below="@id/cardView"
        android:layout_centerHorizontal="true"
        android:text="Try"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonround"
        android:textColor="@color/colorTextButton"
        />
</RelativeLayout>
