<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gandaedukasi.gandateacher.LoginActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageLogo"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageUsername"
        android:src="@drawable/username"
        android:layout_below="@+id/imageLogo"
        android:layout_toLeftOf="@+id/layoutUsername"
        android:layout_marginTop="54dp"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imagePassword"
        android:src="@drawable/password"
        android:layout_below="@+id/imageUsername"
        android:layout_toLeftOf="@+id/layoutPassword"
        android:layout_marginTop="30dp"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageLogo"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/layoutUsername"
        android:gravity="center">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:id="@+id/editUsername"
            android:textColorHint="@color/colorNormalWhite"
            android:textColor="@color/colorNormalWhite"
            android:textColorHighlight="@color/colorNormalWhite"
            android:gravity="center" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutUsername"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutPassword"
        android:gravity="center">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:id="@+id/editPassword"
            android:textColorHint="@color/colorNormalWhite"
            android:textColor="@color/colorNormalWhite"
            android:textColorHighlight="@color/colorNormalWhite"
            android:gravity="center" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLogin"
        android:text="Login"
        android:layout_below="@+id/layoutPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/buttonround"
        android:gravity="center_vertical|center|center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a member yet?"
        android:textSize="18dp"
        android:layout_below="@+id/buttonLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/or"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonReg"
        android:text="Register Here"
        android:layout_below="@+id/or"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/buttonround"
        android:gravity="center" />
</RelativeLayout>
