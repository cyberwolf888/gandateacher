<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/cvSubmitJadwal"
android:layout_marginTop="5dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_oval="true"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/guest"
        android:id="@+id/imageStudent"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/tempat_pertemuan" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentName"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/imageStudent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="left"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentName"
        android:layout_toRightOf="@id/imageStudent"
        android:id="@+id/studentLecture"
        android:text="Bhs.Inggris"
        android:layout_gravity="left"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentLecture"
        android:layout_toRightOf="@id/imageStudent"
        android:id="@+id/tgl_pertemuan"
        android:text="Sunday, 06-08-2016"
        android:layout_gravity="left"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tgl_pertemuan"
        android:layout_toRightOf="@id/imageStudent"
        android:id="@+id/waktu_pertemuan"
        android:text="12.00 WITA"
        android:layout_gravity="left"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/waktu_pertemuan"
        android:layout_toRightOf="@id/imageStudent"
        android:id="@+id/tempat_pertemuan"
        android:text="Jalan gunung agung"
        android:layout_gravity="left"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        />
</RelativeLayout>
</android.support.v7.widget.CardView>