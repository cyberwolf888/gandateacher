<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="150dp"
        android:id="@+id/cvJadwal"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:id="@+id/layoutPic"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_oval="true"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:src="@drawable/guest"
                android:id="@+id/imageStudent"
                android:layout_marginTop="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentName"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@+id/imageStudent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="left"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/Lecture"
                android:text="Mata Pelajaran"
                android:layout_gravity="left"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentLecture"
                android:layout_toRightOf="@+id/Lecture"
                android:text="Bhs.Inggris"
                android:layout_gravity="left"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/Date"
                android:text="Tanggal"
                android:layout_below="@+id/Lecture"
                android:layout_gravity="left"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/studentLecture"
                android:id="@+id/tgl_pertemuan"
                android:layout_toRightOf="@+id/Date"
                android:text="Sunday, 06-08-2016"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/Time"
                android:text="Waktu"
                android:layout_below="@+id/Date"
                android:layout_gravity="left"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tgl_pertemuan"
                android:id="@+id/waktu_pertemuan"
                android:layout_toRightOf="@+id/Time"
                android:text="12.00 WITA"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/studentPertemuan"
                android:text="Pertemuan"
                android:layout_below="@+id/Time"
                android:layout_gravity="left"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/waktu_pertemuan"
                android:layout_toRightOf="@+id/studentPertemuan"
                android:id="@+id/pertemuan"
                android:text="Pertemuan 1"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/Place"
                android:text="Tempat"
                android:layout_below="@+id/studentPertemuan"
                android:layout_gravity="left"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pertemuan"
                android:layout_toRightOf="@+id/Place"
                android:id="@+id/tempat_pertemuan"
                android:text="Jalan gunung agung"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorPrimary"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>