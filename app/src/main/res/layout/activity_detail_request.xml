<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/latar"
    android:padding="10dp"
    tools:context="com.gandaedukasi.gandateacher.DetailRequestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/cardView"
            android:background="@color/cardview_light_background"
            app:cardCornerRadius="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/guest"
                    android:id="@+id/studentPhoto"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/studentName"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_below="@+id/studentPhoto"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/studentSchool"
                    android:layout_below="@+id/studentName"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorNormalWhite"
            android:layout_below="@+id/cardView"
            android:layout_marginTop="10dp"
            android:id="@+id/separator1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listRequest"
            android:layout_below="@+id/separator1"
            android:orientation="vertical">
            //Request
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Request"
                android:text="Request List"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:layout_below="@+id/separator1"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorNormalWhite"
                android:layout_gravity="center"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/rvDetailRequestJadwal"
                android:layout_marginTop="5dp"
                >

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


        <Button
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAccept"
            android:text="Accept"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/listRequest"
            android:layout_marginTop="30dp"
            android:maxWidth="370dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonround"
            />
        <Button
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDecline"
            android:text="Decline"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/btnAccept"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:maxWidth="370dp"
            android:background="@drawable/buttonround"
            />
    </RelativeLayout>
</ScrollView>
