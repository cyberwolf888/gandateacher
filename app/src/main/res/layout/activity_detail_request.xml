<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latar"
    android:padding="10dp"
    tools:context="com.gandaedukasi.gandateacher.DetailRequestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/cardView"
            android:background="@color/cardview_light_background"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/guest"
                    android:id="@+id/studentPhoto"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/studentName"
                    android:text="I Nyoman Swantara"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_below="@+id/studentPhoto"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/studentSchool"
                    android:layout_below="@+id/studentName"
                    android:text="SMA Negeri Mengwi"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorNormalWhite"
            android:layout_below="@+id/cardView"
            android:layout_marginTop="10dp"
            android:id="@+id/separator1"
            />

        //Request
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Request"
            android:text="Request List"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:layout_below="@+id/separator1"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorNormalWhite"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView2"
            android:layout_below="@+id/Request"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_light_background"
            android:padding="10dp"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            //Lecture
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/Lecture"
                android:text="Mata Pelajaran           "
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/studentLecture"
                android:text="IPA"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/Lecture"
                android:textColor="#000000"
                />
            //Date
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/Date"
                android:text="Hari dan Tanggal       "
                android:textSize="16dp"
                android:layout_below="@+id/Lecture"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/studentDate"
                android:text="Senin, 11 Juli 2016"
                android:textSize="16dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/Date"
                android:layout_below="@+id/studentLecture"
                android:textColor="#000000"
                />
            //Time
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/Time"
                android:text="Waktu                          "
                android:textSize="16dp"
                android:layout_below="@+id/Date"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/studentTime"
                android:text="15.00 Wita"
                android:textSize="16dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/Time"
                android:layout_below="@+id/studentDate"
                android:textColor="#000000"
                />
            //Location
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/Place"
                android:text="Tempat                       "
                android:textSize="16dp"
                android:layout_below="@+id/Time"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:id="@+id/studentPlace"
                android:text="Jl. Madalasari Gg. VIII"
                android:textSize="16dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/Time"
                android:layout_below="@+id/studentTime"
                android:textColor="#000000"
                />
        </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView3"
            android:layout_below="@+id/cardView2"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_light_background"
            android:padding="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                //Lecture
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Lecture2"
                    android:text="Mata Pelajaran           "
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/studentLecture2"
                    android:text="Matematika"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/Lecture2"
                    android:textColor="#000000"
                    />
                //Date
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Date2"
                    android:text="Hari dan Tanggal       "
                    android:textSize="16dp"
                    android:layout_below="@+id/Lecture2"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/studentDate2"
                    android:text="Selasa, 12 Juli 2016"
                    android:textSize="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/Date2"
                    android:layout_below="@+id/studentLecture2"
                    android:textColor="#000000"
                    />
                //Time
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Time2"
                    android:text="Waktu                          "
                    android:textSize="16dp"
                    android:layout_below="@+id/Date2"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/studentTime2"
                    android:text="15.00 Wita"
                    android:textSize="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/Time2"
                    android:layout_below="@+id/studentDate2"
                    android:textColor="#000000"
                    />
                //Location
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Place2"
                    android:text="Tempat                       "
                    android:textSize="16dp"
                    android:layout_below="@+id/Time2"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/studentPlace2"
                    android:text="Jl. Madalasari Gg. VIII"
                    android:textSize="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/Time2"
                    android:layout_below="@+id/studentTime2"
                    android:textColor="#000000"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAccept"
            android:text="Accept"
            android:layout_below="@+id/cardView3"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonround"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDecline"
            android:text="Decline"
            android:layout_below="@+id/btnAccept"
            android:layout_marginTop="2dp"
            android:background="@drawable/buttonround"
            />
    </RelativeLayout>
</ScrollView>
